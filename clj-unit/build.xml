<project name="clj-unit" default="jar">
  <description>Pack all class files into a JAR.</description>

  <property name="jarfile" location="clj-unit.jar"/>
  
  <target name="jar"
          description="Create jar file.">
    <jar jarfile="${jarfile}">
      <fileset dir="./classes" includes="**/*.class"/>
    </jar>
  </target>
</project>
