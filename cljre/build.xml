<project name="cljre" default="jar">
  <description>Pack all sources into a JAR.</description>

  <property name="jarfile" location="cljre.jar"/>
  <property name="depsjarfile" location="cljre-deps.jar" />

  <target name="clean"
          description="Remove generated files and directories.">
    <delete file="${jarfile}"/>
    <delete file="${depsjarfile}" />
  </target>

  <target name="jar"
          description="Create jar file.">
    <jar jarfile="${jarfile}">
      <fileset dir="./src" includes="cljre/**/*.clj"/>
    </jar>
  </target>
  
  <target name="jardeps"
          description="Create jar file for the app deps.">
    <jar destfile="${depsjarfile}"
      filesetmanifest="merge">
      <zipgroupfileset dir="/Users/mmcgrana/Clojure/jars" includes="*.jar" />
    </jar>
  </target>
</project>
