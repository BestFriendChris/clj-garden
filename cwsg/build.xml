<project name="cwsg" default="jar">
  <description>
    Pack all sources into a JAR.
  </description>

  <property name="jarfile" location="cwsg.jar"/>

  <target name="clean"
          description="Remove generated files and directories.">
    <delete file="${jarfile}"/>
  </target>

  <target name="jar"
          description="Create jar file.">
    <jar jarfile="${jarfile}">
      <fileset dir="./src" includes="cwsg/**/*.clj"/>
    </jar>
  </target>
</project>
